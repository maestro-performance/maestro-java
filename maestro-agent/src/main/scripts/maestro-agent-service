localdir=`dirname $0`
installdir=`dirname ${localdir}`

if [ "$installdir" = "." ] ; then
	installdir=".."
fi

source "$installdir"/config/maestro-agent-service.conf

RED="\e[0;31m"
GREEN="\e[0;32m"
RESET="\e[0m"

function esuccess() {
    echo -e "$GREEN OK$RESET"
}

function eerror() {
    echo -e "$RED failed$RESET ($@)"
}

function start() {
    echo -en "Starting the daemon: "
    nohup "$installdir"/bin/maestro-agent -m "$MAESTRO_BROKER" -l "$MAESTRO_LOG_DIR" $@ > /dev/null 2> /dev/null &
    if [ $? -ne 0 ] ; then
        eerror "failed to daemonize the Maestro agent"
        exit 1
    fi

    sleep 2s
    proc_count=0
    for pid in $(ps -ef | grep -i maestro-agent | grep java | grep -v worker-agent | grep -v grep | awk ' { print $2 } ') ; do
        if [ $proc_count -eq 0 ] ; then
            esuccess
        fi

        echo -e "Maestro agent started:$GREEN $pid $RESET"
        ((proc_count++))
    done

    if [ $proc_count -eq 0 ] ; then
        eerror "Maestro agent did not start successfully"
    fi
}

function stop() {
    for pid in $(ps -ef | grep -i maestro-agent | grep -v service | grep -v grep | awk ' { print $2 } ') ; do
        echo "Killing maestro-agent $pid"
        kill -TERM ${pid}
    done
}

function restart() {
    stop
    start

}

function printHelp() {
    echo "Usage: $0 [start|stop|restart]"
}


if [[ -z "$1" ]] ; then
    printHelp
    exit 1
fi


case "$1" in
	start)
		start $2 $3
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	*)
		printHelp
		RETVAL=2
esac